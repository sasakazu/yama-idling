

<%= render 'shared/header' %>

<div class="container">

  <div class="user-show-profile">
    <div class="row">

      <div class="col-md-4">
        <%= link_to image_tag(@user.icon, :class => "img-circle"), edit_user_path(current_user) %>

      </div>

      <div class="col-md-8 user-show-detail">
        <p>名前：<%= @user.name %></p>
        <p>メールアドレス：<%= @user.email %></p>

        <%= link_to 'プロフィール編集', edit_user_path(current_user) %>

      </div>


  </div>

  <div class="row user-have-mountains">

    <h2>所有している山</h2>

    <%= render @mountain %>

  </div>


</div>

</div>


<%= render 'shared/footer' %>
