
<%= render 'shared/header' %>

  <h2 class="mountain-new-title">登録画面</h2>


<div class="mountain-new-wrapper">




<%= form_for @mountain do |f| %>



   <%= f.label :タイトル %><br>
   <%= f.text_field :name %><br>


   <%= f.label :場所 %><br>
   <%= f.text_field :where %><br>

   <%= f.label :契約期間 %><br>
   <%= f.text_field :long %><br>

   <%= f.label :契約金額 %><br>
   <%= f.text_field :price %><br>


   <%= f.label :画像１ %><br>
   <%= f.file_field :image %><br>

   <%= f.label :画像２ %><br>
   <%= f.file_field :image2 %><br>

   <%= f.label :画像３ %><br>
   <%= f.file_field :image3 %><br>

<div class="mountain-new-submit">
  <%= f.submit "登録する" %><br>

</div>



<% end %>



 </div>




<%= render 'shared/footer' %>
